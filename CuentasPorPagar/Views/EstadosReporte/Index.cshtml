            <th>Utilidad</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BeneficiosDiarios)
        {
            <tr>
                <td>@item.Fecha.ToString("yyyy-MM-dd")</td>
                <td>@item.TotalVentas.ToString("C")</td>
                <td>@item.TotalCompras.ToString("C")</td>
                <td>@item.Utilidad.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

