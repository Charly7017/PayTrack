@model DashBoardViewModel


@{
    ViewData["Title"] = "Dashboard";
}


<partial name="_Submenu" model="SubMenuDashboard.Ventas"/>
<partial name="_Links" />
<partial name="_SelectAño" model="Model.Años" />
<partial name="_EstadisticasVentas" model="@Model.ModelValue" />



@section Scripts {

    <script>


        var meses = []
        var años = []
        var ventasAnuales = []
        var ventasMensuales=[]
        var ventasDiarias = []
        var color = "blue"

        @if (Model.VentasAnuales.Count() > 0)
        {
            foreach (var item in Model.VentasAnuales)
            {
                @:años.push("@item.VentasAño")
                @:ventasAnuales.push("@item.Total")

            }
        }

        @if (Model.VentasMensuales.Count() > 0)
        {
            foreach (var item in Model.VentasMensuales)
            {
                @:meses.push("@item.Mes")
                @:ventasMensuales.push("@item.Total")

            }
        }



        new Chart("myChartAnual", {
            type: "bar",
            data: {
                labels: años,
                datasets: [{
                    backgroundColor: color,
                    data: ventasAnuales
                }]
            },
            options: {
                legend: { display: false },
                responsive: true,
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true,
                            stepSize: 1,
                            precision: 0
                        }
                    }],
                }
            }
        });

        new Chart("myChartMensual", {
            type: "bar",
            data: {
                labels: meses,
                datasets: [{
                    backgroundColor: color,
                    data: ventasMensuales
                }]
            },
            options: {
                legend: { display: false },
                responsive: true,
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true,
                            stepSize: 1,
                            precision: 0
                        }
                    }],
                }
            }
        });


        new Chart("myChartDiario", {
            type: "bar",
            data: {
                labels: [1, 3, 4],
                datasets: [{
                    backgroundColor: color,
                    data: [2, 5, 7]
                }]
            },
            options: {
                legend: { display: false },
                responsive: true,
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true,
                            stepSize: 1,
                            precision: 0
                        }
                    }],
                }
            }
        });



    </script>

}


